    <androidx.appcompat.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorAccent"
        android:elevation="4dp"
        android:theme="@style/MyMaterialTheme.Base"
        android:gravity="center"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:titleTextColor="#FFFFFF" >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Token Display"
            android:textSize="18sp"
            android:textColor="@color/whiteColor"
            android:layout_gravity="center"
            android:id="@+id/toolbar_title" />

    </androidx.appcompat.widget.Toolbar>

        <LinearLayout
            android:id="@+id/constraintLayout"
            android:layout_width="423dp"
            android:layout_height="148dp"
            android:background="@color/babyBlue"
            android:gravity="center"
            android:layout_below="@id/my_toolbar"
            >

            <TextView
                android:id="@+id/display"
                android:background="@drawable/mydisplay"
                android:layout_width="375dp"
                android:layout_height="104dp"
                android:layout_margin="20dp"
                android:gravity="center"
                android:textColor="@color/red"
                android:textSize="70sp"

                />

        </LinearLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_below="@id/constraintLayout"
    android:layout_marginBottom="60dp"
    android:gravity="center">

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/first_row"
        android:gravity="center"

        >
        <Button
            android:id="@+id/one"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="1"
            android:layout_margin="9dp"
            android:textColor="@color/whiteColor"
            android:textSize="42sp"

            />
        <Button
            android:id="@+id/two"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="2"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp"
            android:layout_alignLeft="@+id/one"
            />

        <Button
            android:id="@+id/three"
            android:layout_width="82dp"
            android:layout_height="82dp"

            android:background="@drawable/mybutton"
            android:text="3"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/second_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/first_row"
        android:gravity="center"
        >

        <Button
            android:id="@+id/four"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="4"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp"
            />
        <Button
            android:id="@+id/five"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="5"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp"
            />

        <Button
            android:id="@+id/six"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="6"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/third_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/second_row"
        android:gravity="center"
        >

        <Button
            android:id="@+id/seven"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="7"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp"
            />
        <Button
            android:id="@+id/eight"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="8"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp"
            />

        <Button
            android:id="@+id/nine"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="9"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="42sp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fourth_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/third_row"
        android:gravity="center"
        >
        <Button
            android:id="@+id/clear"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="RESET"
            android:layout_margin="9dp"

            android:textColor="@color/whiteColor"
            android:textSize="20sp"
            />

        <Button
            android:id="@+id/zero"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_margin="9dp"
            android:background="@drawable/mybutton"
            android:text="0"

            android:textColor="@color/whiteColor"
            android:textSize="42sp" />

        <ImageButton
            android:id="@+id/backDelete"
            android:layout_width="wrap_content"
            android:layout_height="82dp"
            android:layout_margin="9dp"

            android:background="@drawable/mybutton"
            android:padding="20dp"

            android:src="@drawable/ic_backspace_black_24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/fifth_row"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fourth_row"
        android:gravity="center"
        >

        <ImageButton
            android:id="@+id/up_btn"

            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:layout_margin="5dp"

            android:padding="20dp"
            android:src="@drawable/ic_navigate_up_arrow"
            />

        <Button
            android:id="@+id/send_btn"
            android:layout_width="98dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"
            android:text="Call"
            android:textColor="@color/whiteColor"
            android:textSize="20sp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />

        <ImageButton
            android:id="@+id/down_btn"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:background="@drawable/mybutton"

            android:padding="20dp"
            android:src="@drawable/ic_navigate_down_arrow"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp" />

    </LinearLayout>

    </RelativeLayout>

      <LinearLayout
        android:id="@+id/LinearLayout02"
        android:layout_width="match_parent"
        android:layout_height="50dp"
          android:gravity="center"
        android:layout_alignParentBottom="true"
        android:background="@color/blue"
        android:orientation="horizontal">

          <TextView
              android:id="@+id/connectionStatus"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:textSize="24sp"
               android:textColor="@color/redColor"
              android:layout_gravity="center"
              android:text="No device connected">

          </TextView>

    </LinearLayout>

