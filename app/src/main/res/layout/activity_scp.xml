<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/draw_layout"
    android:layout_gravity="center"
    android:background="#F8F0E3">

    <!--this the navigation view which draws
        and shows the navigation drawer-->
    <!--include the menu created in the menu folder-->

    <RelativeLayout
        android:id="@+id/clockLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBlack"
        android:gravity="center">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorAccent"
            android:elevation="4dp"
            android:gravity="center"
            android:theme="@style/MyMaterialTheme.Base"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="#FFFFFF">

            <TextView
                android:id="@+id/toolbar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/infant_warmer"
                android:textColor="@color/whiteColor"
                android:textSize="18sp" />

        </androidx.appcompat.widget.Toolbar>


<ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/my_toolbar">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/LinearLayout"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:layout_marginTop="10dp"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:weightSum="2">

        <LinearLayout
            android:id="@+id/leftPart2"
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/skin"
                android:id="@+id/skinTempTitle">
            </TextView>

            <LinearLayout
                android:id="@+id/humLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:layout_marginEnd="3dp"
                    android:src="@drawable/ic_temp_thermometer" />

                <TextView
                    android:id="@+id/tempShow"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/_000"
                    android:textColor="@color/limeGreen"
                    android:textSize="42sp" />

                <TextView
                    android:id="@+id/celUnit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/xb0_c"
                    android:textColor="@color/limeGreen"
                    android:textSize="42sp" />

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/rightPart2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:layout_margin="6dp"

            android:layout_weight="1"
            android:background="@drawable/layout_bg_hum"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/setDiffLayout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/humBtnMinus"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:background="@drawable/mybutton_minus"
                    android:src="@drawable/ic_minus" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/setHumPointTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/set_point"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/textSize">
                    </TextView>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/setSkinTemp"
                            android:layout_width="42dp"
                            android:layout_height="42dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginRight="3dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="@string/_000"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/setTempUnit"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginStart="1dp"
                            android:layout_marginEnd="6dp"
                            android:text="@string/xb0_c"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp"/>
                    </LinearLayout>
                </LinearLayout>

                <ImageButton
                    android:id="@+id/humBtnPlus"
                    android:layout_width="51dp"
                    android:layout_height="51dp"
                    android:background="@drawable/mybutton_plus"
                    android:src="@drawable/ic_plus" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

        <LinearLayout
            android:id="@+id/LinearLayout02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LinearLayout"
            android:layout_marginTop="10dp"
            android:background="@color/whiteColor"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/leftPart"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:orientation="horizontal">



                <LinearLayout
                    android:id="@+id/tempLayout"
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:layout_gravity="center"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:weightSum="2"
                        android:orientation="horizontal">
                        <ImageView
                            android:id="@+id/tempIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="2dp"

                            android:src="@drawable/ic_temp_thermometer" />

                        <TextView
                            android:id="@+id/tempControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="50dp"
                            android:gravity="center"
                            android:text="@string/air"
                            android:textColor="@color/colorBlack"
                            android:textSize="24sp" />
                    </LinearLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/airTempShow"
                            android:layout_width="42dp"
                            android:layout_height="60dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="@string/_000"
                            android:textColor="@color/limeGreen"
                            android:textSize="29sp" />

                        <TextView
                        android:id="@+id/airTempUnit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/xb0_c"
                        android:layout_weight="1"
                        android:textColor="@color/limeGreen"
                        android:textSize="29sp" />
                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

        </LinearLayout>





    <LinearLayout
        android:id="@+id/LinearLayout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/LinearLayout02"
        android:layout_marginTop="10dp"
        android:background="@color/whiteColor"
        android:orientation="horizontal"
        android:weightSum="2">

            <LinearLayout
                android:id="@+id/pressLayout"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal">
                <ImageView
                    android:id="@+id/diffPress"
                    android:layout_width="0dp"
                    android:layout_marginStart="15dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="3dp"
                    android:layout_weight="1"
                    android:src="@drawable/ic_heater" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/diffControl"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/heater"
                            android:textColor="@color/colorBlack"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/pressureShow"
                            android:layout_width="70dp"
                            android:layout_height="60dp"

                            android:gravity="center"
                            android:text="@string/_00"
                            android:textColor="@color/limeGreen"
                            android:textSize="29sp" />

                        <TextView
                            android:id="@+id/percentUnit"
                            android:layout_width="70dp"
                            android:layout_height="60dp"
                            android:gravity="center"
                            android:text="%"
                            android:textColor="@color/limeGreen"
                            android:textSize="29sp" />

                    </LinearLayout>



                </LinearLayout>

            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="2">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="6dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:textColor="@color/colorBlack"
                    android:gravity="center|top"
                    android:text="MODE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heatMode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="SERVO" />
            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/servoManualLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_below="@id/LinearLayout3"
        android:weightSum="2"
        android:background="@color/whiteColor"
        android:orientation="horizontal">
        <Button
            android:id="@+id/servo"
            android:text="Servo"
            android:layout_width="42dp"
            android:textSize="12sp"
            android:layout_weight="1"
            android:gravity="center"
            android:layout_marginRight="51dp"
            android:layout_marginLeft="51dp"
            android:textColor="@color/button_text"
            android:layout_height="60dp">

        </Button>

        <Button
            android:id="@+id/manual"
            android:layout_width="42dp"
            android:layout_height="60dp"
            android:textSize="12sp"
            android:layout_marginRight="51dp"
            android:layout_marginLeft="51dp"
            android:layout_weight="1"
            android:gravity="center"
            android:textColor="@color/button_text"
            android:text="Manual" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/alarmTitleLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/servoManualLayout"
        android:orientation="horizontal">



        <TextView
            android:id="@+id/alarmTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            android:gravity="end"
            android:layout_weight="1"
            android:textSize="24sp"
            android:text="Alarms"
            android:textColor="@color/colorWhite">
        </TextView>
    </LinearLayout>
    <View
        android:id="@+id/lioUp"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        android:layout_below="@id/alarmTitleLayout"
        android:background="@color/darkGray"/>
    <LinearLayout
        android:id="@+id/firstRowGasLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:layout_below="@+id/lioUp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">


                <Button
                    android:id="@+id/changeUnit"
                    android:layout_width="105dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center"
                    android:textColor="@color/button_text"
                    android:text="°C/°F"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/mute"
                    android:layout_width="105dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginRight="6dp"
                    android:gravity="center"
                    android:text="Mute"
                    android:textColor="@color/button_text"
                    android:textSize="12sp" />

            </LinearLayout>

            <View
                android:id="@+id/liod"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:layout_height="1dp"
                android:background="@color/darkGray"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="TIMER"/>

                <TextView
                    android:id="@+id/timerShow"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:textColor="@color/colorWhite"
                    android:text="00"
                    android:textSize="24sp" />

                <Button
                    android:id="@+id/timerBtn"
                    android:layout_width="105dp"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:layout_height="60dp"
                    android:textColor="@color/button_text"
                    android:text="Timer On" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:id="@+id/vCalSep"
            android:layout_width="1dp"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:background="@color/darkGray"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasOne"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/probe_fail"
                    android:textColor="@color/colorWhite">

                </TextView>

                <TextView
                    android:id="@+id/gasOneStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"

                    android:textColor="@color/colorBlack" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/gasTwo"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/temp_high">

                </TextView>
            <TextView
                android:id="@+id/gasFourStatusIcon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_margin="6dp"
                android:background="@drawable/mybutton"
                android:gravity="center"

                android:textColor="@color/colorBlack"

                />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasThree"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/temp_low">

                </TextView>

                <TextView
                    android:id="@+id/gasTwoStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/mybutton"
                    android:textColor="@color/colorBlack"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasFour"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/heater_fail"
                    android:textColor="@color/colorWhite">

                </TextView>

                <TextView
                    android:id="@+id/gasFiveStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:textColor="@color/colorBlack"

                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasFive"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/power_fail">

                </TextView>

                <TextView
                    android:id="@+id/gasThreeStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_margin="6dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"

                    android:textColor="@color/colorBlack" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/gasSix"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorWhite"
                    android:gravity="center"
                    android:text="@string/system_fail">

                </TextView>

                <TextView
                    android:id="@+id/gasSixStatusIcon"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:background="@drawable/mybutton"
                    android:gravity="center"
                    android:layout_margin="6dp"
                    android:textColor="@color/colorBlack" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>



    <View
        android:id="@+id/lio"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_height="1dp"
        android:layout_below="@id/firstRowGasLayout"
        android:background="@color/darkGray"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@color/colorWhite"
        android:layout_below="@+id/lio"
        android:weightSum="2"
        android:orientation="horizontal">


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@color/colorWhite"
            android:src="@drawable/sst_logo_100_0">

        </ImageButton>

    </LinearLayout>

</RelativeLayout>
        </ScrollView>


        <TextView
            android:id="@+id/connectionStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|bottom"
            android:text="@string/no_device_connected"
            android:textColor="@color/redColor"
            android:textSize="24sp">
        </TextView>

    </RelativeLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/nav_view"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header_main"
        app:menu="@menu/navigation_menu" />

</androidx.drawerlayout.widget.DrawerLayout>
